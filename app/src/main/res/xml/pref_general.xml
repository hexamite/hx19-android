<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="pref_host"
        android:title="@string/pref_title_host"
        android:defaultValue="10.10.100.254"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="pref_port"
        android:title="@string/pref_title_port"
        android:defaultValue="8899"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="pref_log_file"
        android:title="@string/pref_title_log_file"
        android:defaultValue="hx19.log"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="pref_log_view_num_lines"
        android:title="@string/pref_title_log_view_num_lines"
        android:defaultValue="100"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />


</PreferenceScreen>
